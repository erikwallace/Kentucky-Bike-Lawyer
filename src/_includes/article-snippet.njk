<article class="snippet flow">
    <h3 class="snippet__title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h3>
    <div class="flow">
        <p class="snippet__meta">
            <!--by <span>{{ post.data.author }}</span> on--> <span>{{ post.date | postDate }}</span>
        </p>
        <p class="snippet__body">{{ post.data.description | truncate(320) }}</p>
    </div>
</article>